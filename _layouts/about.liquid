---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {% if site.title == 'blank' %}
        <span class="font-weight-bold">{{ site.first_name }}</span> {{ site.middle_name }}
        {{ site.last_name }}
      {% else %}
        {{ site.title }}
      {% endif %}
    </h1>
    <p class="desc">{{ page.subtitle }}</p>
  </header>

<article>
    <div class="row align-items-center">
      
      <div class="col-md-8 col-sm-12 pr-md-4">
        
        {% if page.intro %}
        <div class="mb-4">
          {% assign citation_count = site.data.google_scholar_stats.total_citations | default: "30+" %}
          
          <p class="font-weight-normal mb-3" style="font-size: 1.1rem;">
            {{ page.intro | replace: '%CITATIONS%', citation_count }}
          </p>
        </div>
        {% endif %}

        {% if page.research_interests %}
        <div class="mb-4">
          <h6 class="mb-3 font-weight-bold text-uppercase" style="letter-spacing: 0.05em; font-size: 1.0rem;">
            <i class="fa-solid fa-atom mr-2" style="color: var(--global-theme-color);"></i>Research Interests
          </h6>
          <div class="d-flex flex-wrap" style="gap: 10px;">
            {% for interest in page.research_interests %}
            <span class="badge p-2 border font-weight-normal shadow-sm" style="color: #000 !important; background-color: #fff;">
              {{ interest }}
            </span>
            {% endfor %}
          </div>
        </div>
        {% endif %}

      </div>

      {% if page.profile_image %}
      <div class="col-md-4 col-sm-12 mt-4 mt-md-0">
        <div class="ml-auto text-center" style="max-width: 280px; width: 100%;">
          <img class="img-fluid z-depth-1 rounded" src="{{ page.profile_image | prepend: '/assets/img/' | relative_url }}" alt="{{ site.title }}" style="width: 100%;">
        </div>
      </div>
      {% endif %}

    </div>
    <hr class="my-5">

    <div class="clearfix">{{ content }}</div>

    {% if page.announcements and page.announcements.enabled %}
      <h3 class="mt-5 mb-4 pl-3" style="border-left: 4px solid var(--global-theme-color); line-height: 1;">
        <a href="{{ '/news/' | relative_url }}" style="color: inherit;">News</a>
      </h3>
      <div class="news mb-5">
        {% if page.announcements.scrollable %}
          <div class="table-responsive" style="max-height: 200px; border: none;">
            {% include news.liquid limit=true %}
          </div>
        {% else %}
          <div class="table-responsive">
            {% include news.liquid limit=true %}
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if page.latest_posts and page.latest_posts.enabled %}
      <h3 class="mt-5 mb-4 pl-3" style="border-left: 4px solid var(--global-theme-color); line-height: 1;">
        <a href="{{ '/blog/' | relative_url }}" style="color: inherit;">Latest Posts</a>
      </h3>
      <div class="news mb-5">
        {% if page.latest_posts.scrollable %}
          <div class="table-responsive" style="max-height: 60vw">
            {% include latest_posts.liquid %}
          </div>
        {% else %}
          <div class="table-responsive">
            {% include latest_posts.liquid %}
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if page.selected_papers %}
      <h3 class="mt-5 mb-4 pl-3" style="border-left: 4px solid var(--global-theme-color); line-height: 1;">
        <a href="{{ '/publications/' | relative_url }}" style="color: inherit;">Selected Publications</a>
      </h3>
      <div class="publications mb-5">
        {% include selected_papers.liquid %}
      </div>
    {% endif %}

    {% if page.social %}
      <div class="social">
        <div class="contact-icons">{% social_links %}</div>
        <div class="contact-note">{{ site.contact_note }}</div>
      </div>
    {% endif %}

    {% if site.newsletter and site.newsletter.enabled and site.footer_fixed %}
      {% include newsletter.liquid center=true %}
    {% endif %}
  </article>
</div>