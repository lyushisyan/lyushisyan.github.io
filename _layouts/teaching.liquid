---
layout: default
---
<div class="post" style="max-width: 100% !important; width: 100% !important;">

  <header class="post-header mb-5">
    <h1 class="post-title font-weight-bold mb-3">{{ page.title }}</h1>
    <p class="desc lead">{{ page.description }}</p>
  </header>

  <article>
    <div class="courses-container">
      
      {% if page.active_courses_intro %}
      <div class="mb-5 text-muted font-italic pl-3" style="border-left: 3px solid var(--global-theme-color);">
        {{ page.active_courses_intro }}
      </div>
      {% endif %}

      <div class="clearfix">
        {{ content }}
      </div>
    </div>
  </article>

</div>

<style>
  /* 标题颜色 */
  .post-title { color: #000; transition: color 0.2s ease; }
  body.dark .post-title { color: #e0e0e0 !important; }

  /* 课程标题链接颜色 */
  .course-link { color: #000 !important; text-decoration: none; }
  body.dark .course-link { color: #e0e0e0 !important; }
  .course-link:hover { color: var(--global-theme-color) !important; }

  /* 卡片背景适配 */
  body.dark .card { background-color: #252525 !important; }
</style>